<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.satansin.android.compath.GroupCreationActivity" >

    <EditText
        android:id="@+id/edit_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:hint="@string/hint_group_title"
        android:lines="5"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/group_creation_location_reminder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_group_title"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/nav_turn_via_1" />

    <TextView
        android:id="@+id/group_creation_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_creation_location_reminder"
        android:layout_alignTop="@+id/group_creation_location_reminder"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/group_creation_location_reminder"
        android:gravity="center_vertical" />

</RelativeLayout>