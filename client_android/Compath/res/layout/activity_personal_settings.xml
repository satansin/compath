<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.satansin.android.compath.PersonalSettingsActivity" >

    <ImageView
        android:id="@+id/personal_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/test_icon" />

    <TextView
        android:id="@+id/personal_settings_usrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/personal_settings_icon"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/personal_settings_icon" />

    <TextView
        android:id="@+id/personal_settings_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/personal_settings_icon"
        android:layout_alignLeft="@+id/personal_settings_usrname" />

    <RelativeLayout
        android:id="@+id/mygroups_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_settings_icon"
        android:layout_marginTop="90dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/mygroups_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mygroups_arrow"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:text="@string/mygroups_personal_settings" />

        <ImageView
            android:id="@+id/mygroups_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/setting_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignTop="@+id/mygroups_relative_layout"
        android:background="#ccc" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/mygroups_relative_layout"
        android:background="#ccc" >
    </LinearLayout>

</RelativeLayout>