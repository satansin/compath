<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#999"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/message_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_item_time"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/test_icon" />

    <TextView
        android:id="@+id/message_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_item_icon"
        android:layout_toLeftOf="@+id/message_item_icon"
        android:layout_marginTop="12dp"
        android:background="@drawable/chat_string_right_selector"
        android:gravity="center_vertical" />

</RelativeLayout>
