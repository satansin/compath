<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.satansin.android.compath.LocationSelectionActivity" >

    <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="true" />

    <RelativeLayout
        android:id="@+id/location_selection_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#fff" >

        <ImageView
            android:id="@+id/location_selection_reminder"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image_content_description"
            android:padding="20dp"
            android:src="@drawable/nav_turn_via_1" />

        <ImageView
            android:id="@+id/location_selection_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:clickable="true"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/setting_arrow" />

        <TextView
            android:id="@+id/location_selection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/location_selection_reminder"
            android:layout_toLeftOf="@+id/location_selection_arrow"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

</RelativeLayout>