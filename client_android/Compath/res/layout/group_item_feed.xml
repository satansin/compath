<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/feed_item_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="33dp"
		android:background="#eee" />

    <RelativeLayout
        android:id="@+id/usrname_time_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/feed_item_icon"
        android:layout_alignTop="@+id/feed_item_icon"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/feed_item_icon" >

        <TextView
            android:id="@+id/feed_item_usrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/feed_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/feed_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/feed_item_icon"
        android:layout_below="@+id/feed_item_icon"
        android:layout_marginRight="29dp"
        android:paddingTop="23dp"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/feed_item_number_of_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/usrname_time_relative_layout"
        android:layout_marginRight="23dp" />

</RelativeLayout>