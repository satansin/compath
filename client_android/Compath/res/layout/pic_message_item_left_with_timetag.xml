<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:textColor="@color/title_weak" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignTop="@+id/message_item_icon"
        android:background="@color/divider_weak" >
    </LinearLayout>

    <ImageView
        android:id="@+id/message_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_item_time"
		android:background="#eee" />
    
    <ImageView
        android:id="@+id/message_item_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_item_time"
        android:layout_toRightOf="@+id/message_item_icon"
        android:padding="8dp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_weak" >
    </LinearLayout>

    <ProgressBar
        android:id="@+id/message_item_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/message_item_pic"
        android:layout_below="@+id/message_item_time" />

</RelativeLayout>